<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>package</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<outputDirectory>bdap.tools-VVERSIONN</outputDirectory>
			<includes>
				<include>README*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>bin</directory>
			<outputDirectory>bdap.tools-VVERSIONN/bin</outputDirectory>
			<includes>
				<include>*.sh</include>
			</includes>
			<lineEnding>unix</lineEnding>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/resources</directory>
			<outputDirectory>bdap.tools-VVERSIONN/conf</outputDirectory>
			<includes>
				<include>config.properties</include>
				<include>log4j2.xml</include>
			</includes>
			<lineEnding>unix</lineEnding>
		</fileSet>
		<fileSet>
			<directory>target/lib</directory>
			<outputDirectory>bdap.tools-VVERSIONN/lib</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>target</directory>
			<outputDirectory>bdap.tools-VVERSIONN/lib</outputDirectory>
			<includes>
				<include>bdap.tools-*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
